<div class="container d-flex justify-content-md-evenly">
  <div class="d-flex flex-column align-items-center">
    <h1 class="mt-5">Past Events</h1>
      <% @attended_events.each do | event | %>
      <% if event.date < Date.current %>
        <div class="d-flex justify-content-center mt-2">
          <div class="card text-center ms-2 me-2" style="width: 18rem;">
            <div class="card-body">
              <h4 class="card-title">
                <%= event.location %>
              </h4>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= event.date.to_fs(:long) %>
              </h6>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= event.time.strftime("%l:%M %p") %>
              </h6>
              <div class="card-text">
                <p>
                  <%= event.details %>
                </p>
              </div>
              <%= link_to "View", event_path(event), class:"btn btn-primary card-link" %>
            </div>
          </div>
        </div>
        <% end %>
        <% end %>
    </div>
  <div class="d-flex flex-column align-items-center">
      <h1 class="mt-5">Upcoming Events</h1>
      <% @attended_events.each do | event | %>
      <% if event.date > Date.current %>
        <div class="d-flex justify-content-center mt-2">
          <div class="card text-center ms-2 me-2" style="width: 18rem;">
            <div class="card-body">
              <h4 class="card-title">
                <%= event.location %>
              </h4>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= event.date.to_fs(:long) %>
              </h6>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= event.time.strftime("%l:%M %p") %>
              </h6>
              <div class="card-text">
                <p>
                  <%= event.details %>
                </p>
              </div>
              <%= link_to "View", event_path(event), class:"btn btn-primary card-link" %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
