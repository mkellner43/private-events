<div class="container d-flex flex-column align-items-center">
    <div class='mt-3' style='width: 40%;'>
        <%= form_with model: @event do | f | %>
          <div class="d-flex mb-2">
            <%= f.date_field :date, class: "form-control me-2" %>
             <%= f.time_field :time, class: "form-control me-2" %>
          </div>
            <%= f.text_field :location, placeholder: "location", class:"form-control mb-2" %>
            <%= f.text_area :details, placeholder: "Details...", class: "form-control mb-2", rows: "3" %>
          <%= f.submit "Create Event",class:"btn btn-primary" %>
        <% end %>
    </div>
</div>